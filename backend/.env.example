# Backend Environment Variables
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/kyc-system

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRE=7d
ADMIN_JWT_SECRET=your-admin-secret-key-here-change-in-production

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# LLM Integration Configuration (Anthropic Claude via OpenAI SDK)
OPENAI_API_KEY=your-anthropic-api-key-here
OPENAI_API_BASE=https://api.anthropic.com/v1

# LLM Feature Flags
# Set to 'true' to enable intelligent LLM-powered features
USE_LLM_SUMMARY=true
USE_LLM_REJECTION=true
USE_LLM_TRANSLATION=true

# Alternative Summarization API (used if OPENAI_API_KEY is not set)
# SUMMARIZATION_API_URL=https://api.example.com/summarize

# Optional: For OpenAI GPT models instead of Claude
# Uncomment and set if you want to use OpenAI instead of Claude
# OPENAI_ORGANIZATION=your-org-id
# OPENAI_PROJECT_ID=your-project-id

# Supported Languages for Translation
# Add the languages you want to support (comma-separated)
SUPPORTED_LANGUAGES=Spanish,French,German,Chinese,Japanese,Arabic,Portuguese,Russian,Hindi,Korean

# Logging Configuration
LOG_LEVEL=info
